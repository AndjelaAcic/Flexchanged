<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_card_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Project Name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_view_card_upload"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/text_view_card_project_name" />
        <TextView
            android:id="@+id/text_view_card_involved_alumni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Involved Alumni"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@+id/image_view_card_upload"/>
        <TextView
            android:id="@+id/text_view_card_project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Description"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/text_view_card_involved_alumni"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>